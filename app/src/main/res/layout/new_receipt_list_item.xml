<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/advertisement_item_textview_width"
            android:layout_height="@dimen/fragment_coupon_add_coupon_id_textview_height"
            android:textSize="@dimen/fragment_coupon_add_coupon_id_textview_size"
            android:layout_gravity="center"
            android:text="Receipt ID:"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_coupon_add_coupon_id_textview_height"
            android:textSize="@dimen/fragment_coupon_add_coupon_id_textview_size"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:id="@+id/new_receipt_list_item_receipt_id_tv"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/advertisement_item_textview_width"
            android:layout_height="@dimen/fragment_coupon_add_coupon_id_textview_height"
            android:textSize="@dimen/fragment_coupon_add_coupon_id_textview_size"
            android:layout_gravity="center"
            android:text="Time :"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_coupon_add_coupon_id_textview_height"
            android:textSize="@dimen/fragment_coupon_add_coupon_id_textview_size"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:id="@+id/new_receipt_list_item_receipt_time_tv"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/advertisement_item_textview_width"
            android:layout_height="@dimen/fragment_coupon_add_coupon_id_textview_height"
            android:textSize="@dimen/fragment_coupon_add_coupon_id_textview_size"
            android:layout_gravity="center"
            android:text="Total cost :"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_coupon_add_coupon_id_textview_height"
            android:textSize="@dimen/fragment_coupon_add_coupon_id_textview_size"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:id="@+id/new_receipt_list_item_receipt_totalcost_tv"/>
    </LinearLayout>

</LinearLayout>